.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  width: 100%;
}

.empty-image {
  margin-bottom: 30rpx;
}

.empty-text {
  margin-bottom: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-button {
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
  background-color: var(--color-primary, #07c160);
  color: white;
  font-size: 28rpx;
}